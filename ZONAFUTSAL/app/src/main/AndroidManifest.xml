<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andre.zonafutsal">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <![CDATA[
        android:name=".TampilanTekanButtonDetailLapangan"
            android:label="@string/title_activity_tampilan_tekan_button_detail_lapangan"
            android:theme="@style/AppTheme.NoActionBar" />
        ]]>
        <activity android:name=".DetailLapanganActivity" />
        <activity android:name=".PesanActivity" />
        <activity
            android:name=".MenuAktivity"
            android:label="@string/title_activity_menu_aktivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MasukActivity"
            android:label="@string/title_activity_masuk" />
        <activity
            android:name=".DaftarActivity"
            android:label="@string/title_activity_daftar"></activity>
    </application>

</manifest>